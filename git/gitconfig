[user]
    name = Max Maximov
    email = max.maximov@gmail.com

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
    co = checkout
    st = status
    di = diff --word-diff=color
    ci = commit
    up = remote update
    br = branch -vv
    tco = checkout
    tst = status
    tdi = diff --word-diff=color
    tci = commit
    tup = remote update
    tbr = branch
    tlog = log
    tpush = push
    tpull = pull
    tmerge = merge
    tadd = add
    undo = reset --soft HEAD^
    s = status -s
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    me = merge --no-commit --no-ff
    pu = pull --no-commit --rebase
    re = revert --no-commit

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    default = tracking

[diff]
    tool = Kaleidoscope

[difftool]
    prompt = false

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[merge]
    tool = Kaleidoscope

[mergetool]
    prompt = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
